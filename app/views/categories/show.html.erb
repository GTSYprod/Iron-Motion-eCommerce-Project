<div class="container" style="max-width: 1536px; margin: 0 auto; padding: 2rem;">
  <!-- Category Header -->
  <div style="margin-bottom: 2rem;">
    <h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 0.5rem;"><%= @category.name %></h1>
    <% if @category.description.present? %>
      <p style="color: #666; font-size: 1.125rem;"><%= @category.description %></p>
    <% end %>
    <p style="color: #999; margin-top: 0.5rem;"><%= pluralize(@products.total_count, 'product') %></p>
  </div>

  <!-- Category Navigation -->
  <div style="margin-bottom: 2rem;">
    <h3 style="font-size: 1.125rem; font-weight: 600; margin-bottom: 0.5rem;">All Categories:</h3>
    <div class="btn-group">
      <%= link_to "All Products", products_path, class: "btn btn-sm btn-outline" %>
      <% @categories.each do |category| %>
        <%= link_to category.name,
            category_path(category),
            class: "btn btn-sm #{category.id == @category.id ? 'btn-primary' : 'btn-outline'}" %>
      <% end %>
    </div>
  </div>

  <!-- Product Grid -->
  <% if @products.any? %>
    <div class="product-grid" style="margin-bottom: 2rem;">
      <% @products.each do |product| %>
        <%= render 'products/product_card', product: product %>
      <% end %>
    </div>

    <!-- Pagination -->
    <div style="text-align: center;">
      <%= paginate @products %>
    </div>
  <% else %>
    <div class="product-grid-empty">
      <div class="product-grid-empty__icon">ðŸ“¦</div>
      <h2 class="product-grid-empty__title">No products in this category</h2>
      <p class="product-grid-empty__description">Check back later or browse other categories</p>
      <%= link_to "Browse All Products", products_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
