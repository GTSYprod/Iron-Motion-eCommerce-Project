<% if flash.any? %>
  <div class="fixed top-20 right-4 z-50 space-y-2">
    <% flash.each do |type, message| %>
      <div class="<%= flash_class(type) %> px-6 py-4 rounded-lg shadow-lg animate-fade-in max-w-md" data-controller="flash" data-action="click->flash#dismiss">
        <div class="flex items-center justify-between">
          <span><%= message %></span>
          <button type="button" class="ml-4 text-white hover:text-gray-200" data-action="click->flash#dismiss">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
