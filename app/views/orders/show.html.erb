<div class="container" style="max-width: 1280px; margin: 0 auto; padding: 2rem;">
  <h1 style="font-size: 2rem; font-weight: 700; margin-bottom: 1rem;">Order #<%= @order.id %></h1>
  <p style="color: #666; margin-bottom: 2rem;">
    Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
  </p>

  <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 2rem;">
    <!-- Order Items -->
    <div>
      <div class="card">
        <h2 class="card-title">Order Items</h2>

        <% @order.order_items.each do |item| %>
          <div style="display: flex; gap: 1rem; padding: 1rem 0; border-bottom: 1px solid #e9ecef;">
            <% if item.product.images.attached? %>
              <%= link_to product_path(item.product) do %>
                <%= image_tag item.product.images.first.variant(:thumb),
                    style: "width: 80px; height: 80px; object-fit: cover; border-radius: 4px;" %>
              <% end %>
            <% end %>

            <div style="flex: 1;">
              <h4 style="font-weight: 600; margin-bottom: 0.25rem;">
                <%= link_to item.product.name, product_path(item.product), style: "text-decoration: none; color: inherit;" %>
              </h4>
              <p class="product-card__category"><%= item.product.category&.name %></p>
              <p style="margin-top: 0.5rem; color: #666;">Quantity: <%= item.quantity %></p>
            </div>

            <div style="text-align: right;">
              <p style="font-weight: 600;"><%= number_to_currency(item.price_at_purchase) %></p>
              <p style="color: #666; font-size: 0.875rem;">Subtotal: <%= number_to_currency(item.price_at_purchase * item.quantity) %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Order Summary -->
    <div>
      <div class="card">
        <h2 class="card-title">Order Summary</h2>

        <div style="margin: 1rem 0;">
          <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
            <span>Status:</span>
            <span class="btn btn-sm <%= @order.pending? ? 'btn-warning' : @order.delivered? ? 'btn-success' : 'btn-primary' %>" style="cursor: default;">
              <%= @order.order_status.titleize %>
            </span>
          </div>
          <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
            <span>Items:</span>
            <span><%= @order.order_items.sum(:quantity) %></span>
          </div>
        </div>

        <div style="border-top: 1px solid #e9ecef; padding-top: 1rem; margin: 1rem 0;">
          <div style="display: flex; justify-content: space-between; font-size: 1.25rem; font-weight: 700;">
            <span>Total:</span>
            <span class="product-card__price"><%= number_to_currency(@order.order_total) %></span>
          </div>
        </div>
      </div>

      <div class="card" style="margin-top: 1rem;">
        <h2 class="card-title">Shipping Address</h2>
        <p style="margin: 0; line-height: 1.6;">
          <%= @order.address.street_address %><br>
          <%= @order.address.city %>, <%= @order.address.province %><br>
          <%= @order.address.postal_code %>
        </p>
      </div>
    </div>
  </div>

  <div style="margin-top: 2rem; text-align: center;">
    <%= link_to "â† Back to Orders", orders_path, class: "btn btn-outline" %>
  </div>
</div>

<!-- Responsive Styles -->
<style>
  @media (max-width: 768px) {
    .container > div:nth-child(3) {
      grid-template-columns: 1fr !important;
    }
  }
</style>
